<odoo>
    <record id="view_memo_budget_list" model="ir.ui.view">
        <field name="name">memo.budget.list</field>
        <field name="model">memo.over.budget</field>
        <field name="arch" type="xml">
            <list string="Budgets">
                <field name="name"/>
                <field name="purchase_order_id" string="Purchase Order"/>
                <field name="date"/>
                <field name="reason"/>
            </list>
        </field>
    </record>

    <record id="view_memo_over_budget_form" model="ir.ui.view">
        <field name="name">memo.over.budget.form</field>
        <field name="model">memo.over.budget</field>
        <field name="arch" type="xml">
            <form string="Memo Over Budget">
                <div class="oe_title">
                    <h2>
                        <div class="d-flex">
                            <field class="text-break" name="name" readonly="True"/>
                        </div>
                    </h2>
                </div>
                <group>
                    <group>
                        <field name="date"/>
                        <field name="purchase_order_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="reason"/>
                    </group>
                </group>
                <notebook>
                    <page string="Detail Over Budget">
                        <field name="line_ids">
                            <list editable="bottom">
                                <field name="description"/>
                                <field name="product_id"/>
                                <field name="budget_item_id"/>
                                <field name="request_qty"/>
                                <field name="budget_qty"/>
                                <field name="request_price"/>
                                <field name="budget_price"/>
                                <field name="request_amount"/>
                                <field name="budget_amount"/>
                                <field name="over_amount"/>
                                <field name="posisi_over"/>
                            </list>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="action_confirm_memo"
                            string="Confirm Memo"
                            type="object"
                            class="btn-primary"
                            invisible="need_confirm_memo==False"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="memo_budget_action">
        <field name="name">Budget Revision</field>
        <field name="res_model">memo.over.budget</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_memo_budget" name="Budget Revision" parent="menu_budget_root" sequence="10" action="memo_budget_action"/>
</odoo>